{
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "mocha",
    "promise"
  ],
  "extends": [
    "cimpress-atsquad"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "indent": ["error", 2, { "SwitchCase": 1, "MemberExpression": 0 }],
    "node/no-unsupported-features/es-syntax": ["off"],
    "node/no-unsupported-features/node-builtins": ["off"]
  }
}
